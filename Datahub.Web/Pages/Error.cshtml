@page "{statusCode?}"
@model ErrorModel
@{
    ViewData["Title"] = "An error has occurred";
    ViewBag.CurrentPage = "Error";
    ViewBag.PageHero = "True";
}

<div class="visual-section" style="background-image: url(/images/northerngannets_nosslerwick_shetlandroinejohansson.jpg);">
    <div class="container">
        @if (Model.ResponseStatusCode == 404) {
            <h1>Page Not Found</h1>
        } else {
            <h1>An error has occurred</h1>
        }
    </div>
</div>

<div class="container no-breadcrumbs">
    <div class="two-columns">
        <div id="content">
            @if (Model.ResponseStatusCode == 404) {
                <h3>Sorry, we've not been able to find the page or file you requested.</h3>
                <p>
                    If you entered a web address, please check it was correct. You can also visit our <a href="@(LayoutViewModel.JNCC_WEBSITE_URL)" title="Home">home page</a>, 
                    browse from the navigation above or use the search to find the information you need.
                </p>
                <p>
                    Alternatively, you can search and browse for information from previous versions of the JNCC website on the 
                    <a rel="noopener" href="https://webarchive.nationalarchives.gov.uk/*/jncc.defra.gov.uk" target="_blank" title="UK Government Web Archive">
                    UK Government Web Archive</a> or feel free to <a href="@(LayoutViewModel.JNCC_WEBSITE_URL)/contact/?ref=datahub-404" title="contact" data-anchor="?ref=datahub-404">contact us</a>.
                </p>
            } else {
                <h3 class="text-danger">An error occurred while processing your request.</h3>

                @if (Model.ShowRequestId)
                {
                    <p>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }
            }
        </div>
    </div>
</div>
