@page "/assets/{assetId}"
@model AssetModel
@{
    ViewData["Title"] = Model.Asset.Metadata.Title;
}
<h1 class="display-5 mb-4">
    <span style="color: rgba(77, 219, 58, 1);">
    <i class="fas fa-table"></i>
    </span>
    @Model.Asset.Metadata.Title
    <span class="small text-muted">@Model.Asset.Metadata.DatasetReferenceDate.Substring(0, 4)</span>
</h1>

<p><span class="text-muted">Keywords</span> 
<span class="background-color: red;">Keyword 1</span>
<span class="">Keyword 2</span>
@foreach (var k in Model.Asset.Metadata.Keywords)
    {<span class="keyword"><span class="vocabful-colour-edge"></span> @(k.Value)</span>}

</p>

@if (!String.IsNullOrWhiteSpace(Model.Asset.DigitalObjectIdentifier))
{
  <p><span class="text-muted">@Model.Asset.DigitalObjectIdentifier</span></p>
}

<p><span class="text-muted">Abstract</span> @Model.Asset.Metadata.Abstract</p>

<br />
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="main-tab" data-toggle="tab" href="#main" role="tab" aria-controls="main" aria-selected="true">
        <i class="fas fa-question-circle"></i>
        Main
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="usage-tab" data-toggle="tab" href="#usage" role="tab" aria-controls="usage" aria-selected="false">
        <i class="fas fa-utensils"></i>
        Usage
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">
        <i class="fas fa-question-circle"></i>
        Contact
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="downloads-tab" data-toggle="tab" href="#downloads" role="tab" aria-controls="downloadscontact" aria-selected="false">
      <i class="fas fa-download"></i>
      Downloads
    </a>
  </li>
</ul>
<div class="tab-content py-4" id="myTabContent">
  <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">

    <!-- TopicCategory -->
    <p><span class="text-muted">Topic Category</span> Environment
    </p>

    <p><span class="text-muted">Temporal Extent</span> @Model.Asset.Metadata.TemporalExtent.Begin
        <i class="fas fa-long-arrow-alt-right"></i>
        @Model.Asset.Metadata.TemporalExtent.End
    </p>

    <p><span class="text-muted">Lineage</span> @Model.Asset.Metadata.Lineage</p>


  </div>
  <div class="tab-pane fade" id="usage" role="tabpanel" aria-labelledby="usage-tab">
      
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

  </div>
  <div class="tab-pane fade" id="downloads" role="tabpanel" aria-labelledby="downloads-tab">
    @foreach (var d in Model.Asset.Data)
      {<p><span class="text-muted"><a href="@d.HTTP.URL">@d.Title</a></span><span>[@d.HTTP.Type]</span></p>}
  </div>
</div>
