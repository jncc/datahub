@page
@model SearchModel
@{
    ViewData["Title"] = "Search";
}

<h1 class="display-5 mb-4">
    <span style="color: rgba(77, 219, 58, 1);">
        <i class="fas fa-search"></i>
    </span>
    Search
</h1>
<div>
    @using (Html.BeginForm("Submit", "search", FormMethod.Get, new { q = Model.SearchParams.q }))
    {
        <div class="input-group mb-5">
            <input type="text" class="form-control" placeholder="Search the Datahub" autofocus aria-label="Search the Datahub" value="@(Model.SearchParams.q)" name="q">
            <div class="input-group-append">
                <button class="btn btn-success px-4" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
                <!-- the keyword's go here-->
            <div id="keywords" class="form-control">
                @for (int i = 0; i < Model.Keywords.Count; i++)
                {
                    var k = Model.Keywords[i];
                    var buttonId = "removeKeyword" + i;
                    var fieldId = "keyword" + i;

                    <input id="@fieldId" type="hidden" name="k" value="@(Model.SearchParams.k[i])">
                    <button id="@buttonId" type="button" onclick="removeKeyword('@i')">
                        @await Html.PartialAsync("_Keyword", k)
                    </button>
                }
            </div>
        </div>
    }
</div>

@if (Model.Results != null && Model.Results.Total > 0)
{
    <div class="mb-4">
        <!--card card-body bg-light -->
        <p><span class="mr-1">Found @(Model.Results.Total) results</span></p>
    </div>

    @foreach (var r in Model.Results.Hits.ToList())
    {
        @await Html.PartialAsync("_SearchResult", r)
    }
}   

@{
    var keywordParam = "";
    foreach (var k in Model.SearchParams.k)
    {
        keywordParam = "&k=" + k + keywordParam;
    }
}

    <div>
        <ul class="pagination">
            <li class="page-item @(Model.SearchParams.p == 1 || Model.Results.Total < Model.SearchParams.size ? "disabled":"")">
                <a data-page="1" class="page-link" href="/search?q=@(Model.SearchParams.q)@keywordParam&p=1"><i class="fas fa-fast-backward"></i></a>
            </li>
            <li class="page-item @(Model.SearchParams.p == 1 || Model.Results.Total < Model.SearchParams.size ? "disabled":"")">
                <a class="page-link" href="/search?q=@(Model.SearchParams.q)@keywordParam&p=@(Model.SearchParams.p - 1)"><i class="fas fa-step-backward"></i></a>
            </li>
            <li class="page-item  @(Model.SearchParams.p == (Math.Ceiling((decimal) Model.Results.Total / Model.SearchParams.size)) || Model.Results.Total < Model.SearchParams.size ? "disabled":"")">
                <a class="page-link" href="/search?q=@(Model.SearchParams.q)@keywordParam&p=@(Model.SearchParams.p + 1)"><i class="fas fa-step-forward"></i></a>
            </li>
            <li class="page-item @(Math.Ceiling((decimal) Model.Results.Total / Model.SearchParams.size) == Model.SearchParams.p || Model.Results.Total < Model.SearchParams.size ? "disabled": "")">
                <a href="/search?q=@(Model.SearchParams.q)@keywordParam&p=@(Math.Ceiling((decimal) Model.Results.Total / Model.SearchParams.size))" class="page-link"><i class="fas fa-fast-forward"></i></a>
            </li>
        </ul>
    </div>

