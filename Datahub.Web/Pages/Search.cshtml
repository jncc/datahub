@page
@using Datahub.Web.Pages.Helpers;
@model SearchModel
@{
    ViewData["Title"] = "Search";
}
@{ ViewBag.CurrentPage = "Search"; }


<br />
<div class="container">

<h1>
    Search
</h1>
<div>
    @using (Html.BeginForm("Submit", "search", FormMethod.Get, new { q = Model.SearchParams.q }))
    {
        <div class="input-group mb-5">  
            <input type="text" class="form-control" placeholder="Search the JNCC Resource hub" autofocus aria-label="Search the JNCC Resource hub" value="@(Model.SearchParams.q)" name="q">
            <div class="input-group-append">
                <button class="btn btn-success px-4" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

        <div id="keywords" class="form-control">
            @for (int i = 0; i < Model.Keywords.Count; i++)
            {
                var k = Model.Keywords[i];
                var buttonId = "removeKeyword" + i;
                var fieldId = "keyword" + i;

                <input id="@fieldId" type="hidden" name="k" value="@(Model.SearchParams.k[i])">
                <button id="@buttonId" type="button" class="keyword-container" onclick="removeKeyword('@i')">
                    @await Html.PartialAsync("_Keyword", k)
                </button>
            }
        </div>
    }
</div>

@if (Model.Results != null && Model.Results.Total > 0)
{
    <div class="mb-4">
        <!--card card-body bg-light -->
        <p><span class="mr-1">Found @(Model.Results.Total) results in the Resource hub</span></p>
    </div>

    @foreach (var r in Model.Results.Hits.ToList())
    {
        @await Html.PartialAsync("_SearchResult", r);
    }
}   

@{
    var keywordQueryString = Model.Keywords.ToConcatenatedString(k =>
        "&k=" + System.Net.WebUtility.UrlEncode(k.Vocab + "/" + k.Value));
}

    <div>
        <ul class="pagination">
            <li class="page-item @(Model.SearchParams.p == 1 || Model.Results.Total < Model.SearchParams.size ? "disabled":"")">
                <a data-page="1" class="page-link" href="/search?q=@(Model.SearchParams.q)&p=1@keywordQueryString"><i class="fas fa-fast-backward"></i></a>
            </li>
            <li class="page-item @(Model.SearchParams.p == 1 || Model.Results.Total < Model.SearchParams.size ? "disabled":"")">
                <a class="page-link" href="/search?q=@(Model.SearchParams.q)&p=@(Model.SearchParams.p - 1)@keywordQueryString"><i class="fas fa-step-backward"></i></a>
            </li>
            <li class="page-item  @(Model.SearchParams.p == (Math.Ceiling((decimal) Model.Results.Total / Model.SearchParams.size)) || Model.Results.Total < Model.SearchParams.size ? "disabled":"")">
                <a class="page-link" href="/search?q=@(Model.SearchParams.q)&p=@(Model.SearchParams.p + 1)@keywordQueryString"><i class="fas fa-step-forward"></i></a>
            </li>
            <li class="page-item @(Math.Ceiling((decimal) Model.Results.Total / Model.SearchParams.size) == Model.SearchParams.p || Model.Results.Total < Model.SearchParams.size ? "disabled": "")">
                <a href="/search?q=@(Model.SearchParams.q)&p=@(Math.Ceiling((decimal) Model.Results.Total / Model.SearchParams.size))@keywordQueryString" class="page-link"><i class="fas fa-fast-forward"></i></a>
            </li>
        </ul>
    </div>

</div>
